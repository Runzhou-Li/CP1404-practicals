BoxLayout:
    orientation: 'vertical'
#    orientation: 'horizontal'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: 0.20
            text: 'Clear'
            on_press: app.reset_text()
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: 0.20
            text: 'Greet'
            on_press: app.handle_greet()
        Label:
            color: (1,1,0,1)
            id: output_label
            text: 'Enter your name'